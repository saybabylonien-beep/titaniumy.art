---
const {
  title = "Titanumy.art – Cosmic Web Agency",
  description = "Space-grade web design, SEO, and cybersecurity for small businesses.",
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="page">
    <div class="space-bg">
      <div class="stars"></div>
      <div class="nebula"></div>
    </div>

    <header class="nav-wrap">
      <div class="nav">
        <a href="/" class="logo">
          <span class="logo-main">Titanumy</span><span class="logo-dot">.art</span>
        </a>

        <nav class="nav-links">
          <a href="/" class="nav-link">Home</a>
          <a href="/services" class="nav-link">Services</a>
          <a href="/contact" class="nav-link nav-cta">Contact</a>
        </nav>
      </div>
    </header>

    <main class="main">
      <slot />
    </main>

    <footer class="footer">
      <p>© {new Date().getFullYear()} Titanumy.art · Built in the cosmos.</p>
    </footer>
  </body>

  <style>
    :global(body) {
      margin: 0;
      font-family: system-ui, -apple-system, BlinkMacSystemFont, "SF Pro Text",
        "Inter", sans-serif;
      color: #e5f2ff;
      background: radial-gradient(circle at top, #020617 0, #020617 40%, #000 100%);
      min-height: 100vh;
      overflow-x: hidden;
    }

    .page {
      position: relative;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    .space-bg {
      position: fixed;
      inset: 0;
      overflow: hidden;
      z-index: -2;
      background: radial-gradient(circle at 10% 20%, #0f172a 0, #020617 40%, #000 100%);
    }

    .stars,
    .nebula {
      position: absolute;
      inset: -20%;
      pointer-events: none;
    }

    .stars {
      background-image:
        radial-gradient(1px 1px at 10% 20%, rgba(148, 163, 184, 0.7) 0, transparent 50%),
        radial-gradient(1px 1px at 80% 30%, rgba(148, 163, 184, 0.7) 0, transparent 50%),
        radial-gradient(2px 2px at 30% 80%, rgba(148, 163, 184, 0.9) 0, transparent 50%),
        radial-gradient(1px 1px at 60% 60%, rgba(148, 163, 184, 0.6) 0, transparent 50%);
      opacity: 0.7;
      animation: twinkle 12s linear infinite alternate;
    }

    .nebula {
      background:
        radial-gradient(circle at 20% 10%, rgba(56, 189, 248, 0.25), transparent 55%),
        radial-gradient(circle at 80% 40%, rgba(129, 140, 248, 0.28), transparent 55%),
        radial-gradient(circle at 40% 90%, rgba(236, 72, 153, 0.18), transparent 55%);
      filter: blur(4px);
      animation: drift 35s linear infinite alternate;
    }

    @keyframes twinkle {
      from { opacity: 0.4; transform: translateY(0px); }
      to   { opacity: 0.9; transform: translateY(15px); }
    }

    @keyframes drift {
      from { transform: translate3d(-15px, 0, 0) scale(1); }
      to   { transform: translate3d(15px, -10px, 0) scale(1.03); }
    }

    .nav-wrap {
      position: sticky;
      top: 0;
      z-index: 20;
      backdrop-filter: blur(16px);
      background: linear-gradient(
        to bottom,
        rgba(15, 23, 42, 0.85),
        rgba(15, 23, 42, 0.55),
        transparent
      );
      border-bottom: 1px solid rgba(148, 163, 184, 0.35);
    }

    .nav {
      max-width: 1120px;
      margin: 0 auto;
      padding: 0.75rem 1.5rem;
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 1.5rem;
    }

    .logo {
      display: inline-flex;
      align-items: baseline;
      gap: 0.1rem;
      text-decoration: none;
    }

    .logo-main {
      font-weight: 700;
      font-size: 1.2rem;
      letter-spacing: 0.06em;
      text-transform: uppercase;
      color: #e0f2fe;
      text-shadow: 0 0 16px rgba(59, 130, 246, 0.9);
    }

    .logo-dot {
      font-weight: 600;
      font-size: 0.95rem;
      color: #a855f7;
      text-shadow: 0 0 12px rgba(168, 85, 247, 0.9);
    }

    .nav-links {
      display: flex;
      align-items: center;
      gap: 1rem;
    }

    .nav-link {
      position: relative;
      padding: 0.35rem 0.8rem;
      border-radius: 999px;
      font-size: 0.9rem;
      text-decoration: none;
      color: #cbd5f5;
      letter-spacing: 0.04em;
      text-transform: uppercase;
      border: 1px solid transparent;
      transition: all 0.18s ease-out;
    }

    .nav-link::after {
      content: "";
      position: absolute;
      inset: 0;
      border-radius: inherit;
      border: 1px solid rgba(56, 189, 248, 0.0);
      box-shadow: 0 0 0 rgba(56, 189, 248, 0);
      transition: all 0.18s ease-out;
    }

    .nav-link:hover::after {
      border-color: rgba(56, 189, 248, 0.5);
      box-shadow: 0 0 18px rgba(56, 189, 248, 0.4);
    }

    .nav-link:hover {
      color: #e0f2fe;
    }

    .nav-cta {
      background: radial-gradient(circle at 0 0, #22d3ee, #0ea5e9);
      color: #0b1120;
      font-weight: 600;
      border-color: rgba(56, 189, 248, 0.5);
      box-shadow:
        0 0 18px rgba(56, 189, 248, 0.65),
        0 0 40px rgba(8, 47, 73, 0.9);
    }

    .nav-cta:hover {
      transform: translateY(-1px);
      box-shadow:
        0 0 26px rgba(56, 189, 248, 0.95),
        0 0 50px rgba(8, 47, 73, 1);
    }

    .main {
      flex: 1;
      max-width: 1120px;
      width: 100%;
      margin: 0 auto;
      padding: 3.5rem 1.5rem 4.5rem;
    }

    .footer {
      padding: 1.25rem 1.5rem 2rem;
      text-align: center;
      font-size: 0.8rem;
      color: #9ca3af;
      border-top: 1px solid rgba(31, 41, 55, 0.9);
      background: linear-gradient(to top, rgba(15, 23, 42, 0.95), transparent);
      backdrop-filter: blur(10px);
    }

    @media (max-width: 720px) {
      .nav {
        padding-inline: 1rem;
      }
      .nav-links {
        gap: 0.4rem;
      }
      .nav-link {
        padding-inline: 0.6rem;
        font-size: 0.78rem;
      }
      .main {
        padding-inline: 1rem;
        padding-top: 3rem;
      }
    }
  </style>
</html>
